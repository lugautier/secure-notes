# Local Development Environment Variables
# Copy this file to .env and update values as needed

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/securenotes
SPRING_DATASOURCE_USERNAME=securenotes
SPRING_DATASOURCE_PASSWORD=securenotes_dev_password
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=5

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Flyway Configuration
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_LOCATIONS=classpath:db/migration

# JWT Configuration (will be added in Phase 2)
# JWT_PRIVATE_KEY=
# JWT_PUBLIC_KEY=
# JWT_EXPIRATION=86400

# Encryption Configuration (will be added in Phase 2)
# KMS_KEY_ARN=
# MASTER_ENCRYPTION_KEY=

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# Logging
LOGGING_LEVEL_COM_SECURENOTES=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
